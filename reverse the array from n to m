

#include <stdio.h>
#include<string.h>
int main() {
    int arr[100],po,i,n;
    printf("print how many numbers ");
    scanf("%d",&n);
    printf("enter position ");
    scanf("%d",&po);
    for(i=0;i<n;i++)
    {
      printf("enter %d position: ",i+1);
      scanf("%d",&arr[i]);
    }
    for(i=0;i<=po-1;i++)
    {
        printf("%d ",arr[i]);
    }
    for(i=n-1;i>po-1;i--)
    {
        printf("%d ",arr[i]);
    }
    return 0;
}

output

print how many numbers 5
enter position 3
enter 1 position: 1
enter 2 position: 2
enter 3 position: 3
enter 4 position: 4
enter 5 position: 5
1 2 3 5 4
